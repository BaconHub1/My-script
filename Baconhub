-- Discord Tab
local DiscordTab = Window:NewTab("Discord")
local DiscordSection = DiscordTab:NewSection("Join Our Server")

local discordInviteLink = "https://discord.gg/w6PyskFT47" -- Change this
DiscordSection:NewButton("Join Discord", "Copies the Discord link to your clipboard", function()
    if setclipboard then
        setclipboard(discordInviteLink)
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Discord Invite",
            Text = "Link copied to clipboard!",
            Duration = 4
        })
    else
        warn("Clipboard not supported by your executor.")
    end
end)

-- Toggle Button for UI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ScreenGui"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

local Toggle = Instance.new("TextButton")
Toggle.Name = "Toggle"
Toggle.Parent = ScreenGui
Toggle.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Toggle.Position = UDim2.new(0, 0, 0.45, 0)
Toggle.Size = UDim2.new(0, 90, 0, 38)
Toggle.Font = Enum.Font.SourceSans
Toggle.Text = "Close/Open"
Toggle.TextColor3 = Color3.fromRGB(248, 248, 248)
Toggle.TextSize = 28
Toggle.Draggable = true
Toggle.MouseButton1Click:Connect(function()
    Library:ToggleUI()
end)

local Corner = Instance.new("UICorner")
Corner.Name = "Corner"
Corner.Parent = Toggle
